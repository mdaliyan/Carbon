{
    "name": "mdaliyan/carbon",
    "type": "library",
    "description": "A simple API extension for DateTime.",
    "keywords": [
        "jdate",
        "shamsi",
        "jalali",
        "date",
        "time",
        "DateTime"
    ],
    "homepage": "http://carbon.mdaliyan.com",
    "support": {
        "issues": "https://github.com/mdaliyan/Carbon/issues",
        "source": "https://github.com/mdaliyan/Carbon"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Brian Nesbitt",
            "email": "brian@nesbot.com",
            "homepage": "http://nesbot.com"
        },
        {
            "name": "Mohammad Aliyan",
            "email": "md.aliyan@gmail.com",
            "homepage": "http://mdaliyan.com"
        }
    ],
    "require": {
        "php": ">=5.3.0",
        "symfony/translation": "~2.6|~3.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "~1.11",
        "phpunit/phpunit": "~4.0|~5.0",
        "sllh/php-cs-fixer-styleci-bridge": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "Mdaliyan\\": "src/Carbon/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/",
            "TestsJ\\": "testsJ/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.22-dev"
        }
    },
    "scripts": {
        "test": "./vendor/bin/phpunit; ./vendor/bin/php-cs-fixer fix -v --diff --dry-run;",
        "phpunit": "./vendor/bin/phpunit;",
        "phpcs": "./vendor/bin/php-cs-fixer fix -v --diff --dry-run;"
    }
}
